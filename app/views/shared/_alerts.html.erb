<% if flash[:alert] %>
    <%= js add_gritter(flash[:alert], title: "Daniel Rivera Portfolio", sticky: false) %>
    <% elsif flash[:error] %>
    <%= js add_gritter(flash[:error], title: "Daniel Rivera Portfolio", sticky: false) %>
    <% else %>
    <%= js add_gritter(flash[:notice], title: "Daniel Rivera Portfolio", sticky: false) %>
<% end %>